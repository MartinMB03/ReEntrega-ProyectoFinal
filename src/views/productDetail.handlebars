<header>
    <h1>Detalles del Producto</h1>
</header>

<main>
    <section>
        <h3>{{product.title}}</h3>
        <p>{{product.description}}</p>
        <p>Precio: ${{product.price}}</p>
        <p>Stock: {{product.stock}}</p>
        <p>Código: {{product.code}}</p>
        <p>Categoría: {{product.category}}</p>
        <button id="add-to-cart-btn" data-product-id="{{product._id}}">Agregar al carrito</button>
    </section>
</main>

<script src="/api/public/js/productDetails.js"></script>
